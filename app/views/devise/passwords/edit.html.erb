<div class="devise">
  <div class="devise__container">
    <h2 class="devise__title">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="devise__field">
        <%= f.label :password, "New password" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em class="block text-right text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="devise__field">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="devise__actions">
        <%= f.submit "Change my password" %>
      </div>
    <% end %>

    <%= render "devise/shared/error_messages", resource: resource %>
    <%= render "devise/shared/links" %>
  </div>
</div>
