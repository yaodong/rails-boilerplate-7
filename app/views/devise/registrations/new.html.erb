<div class="devise">
  <div class="devise__container">
    <h2 class="devise__title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="devise__field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="devise__field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em class="block text-right text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="devise__field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="devise__actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/error_messages", resource: resource %>
    <%= render "devise/shared/links" %>
  </div>
</div>
